{% extends "../shared/layout/defaultLayout.njk" %}
{% from "../shared/sharedView/macro/components/satemap/satemap1.njk" import satemap1 %}
{% from "../shared/sharedView/macro/components/navigationbar.njk" import navigationbar,
navigationbar2 %}
{% from "../shared/sharedView/macro/wuc/rfooter.njk" import rfooter %}
{% from "../shared/sharedView/macro/components/star/star.njk" import star %}
{% from "../shared/sharedView/macro/components/selectOption.njk" import selectOption %}
{% block title %}
54123123213333
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}
  <link href="/dist/styles/reputation/index.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var companyId = {{companyId}}
    var productId = {{productId}}
  </script>
  <script type="text/javascript" src="/dist/scripts/reputation/index.js"></script>
{% endblock script %}

{% block body %}

  <div id="main">

    <div class="map">
      {{satemap1({
        title: "当前位置：",
        select: 4,
        map: [
            {
            name: "首页",
            link: "/"

          }, {
            name: "品牌商",
            link: "/list"

          }, {
            name: (productId==0)| ternary(companyInfo.abbrName,CompanyProduct.company.abbrName),
            link: "/business/"+ companyId

          }, {
              name:  (productId==0)| ternary('全部产品',CompanyProduct.productName),
              link: "/business/product/"+ companyId +"/" + productId

            }
          ]
      })}}
    </div>

    <div class="row1 clearfix">
      <div class="l">
        <img _src_="{{(productId==0)| ternary(companyInfo.logo,CompanyProduct.productCover)}}"/>
      </div>

      <div class="c" id="option1">
        {{selectOption(reputationSelectOption)}}
        <span>产品口碑分</span>
        <div class="score">
          <span>{{(productId==0)| ternary(companyInfo.reputationScore,CompanyProduct.statisticsModel.score)}}</span>
          {{star((productId==0)| ternary(companyInfo.reputationScore,CompanyProduct.statisticsModel.score))}}
          <b>{{(productId==0)| ternary(companyInfo.totalReputationCount,CompanyProduct.statisticsModel.reputationCount)}}条口碑</b>
        </div>
        <div class="configuration">
          {% if (CompanyProduct.statisticsModel.reputationScore != null) and (CompanyProduct.statisticsModel.reputationScore.length > 0) %}
            {% for item in CompanyProduct.statisticsModel.reputationScore %}
              <p data-id="{{item.reputationTypeId}}">
                <span>{{item.reputationTypeName}}</span>
                <span>{{item.reputationScore}}</span>
              </p>
            {% endfor %}
          {% endif %}

        </div>

      </div>
    </div>

    <div class="row2">
      <div class="tab">
        {{navigationbar({
                isMore: true,
                link: "/reputation/publish/"+companyId,
                MoreText:"发布口碑",
                isSelect: "1",
                data: [
                  {
                    title: "口碑详情",
                    link: "javascript:void(0);"
                  }
                ]
            })}}
      </div>

      <div class="cr">
        <div class="tab" id="reputationlist">
          {{navigationbar2({
            isSelect: "1",
            data: [
              {
                class:"high",
                title: "全部(24)",
                link: "javascript:void(0);"
              }, {
                class:"high",
                title: "性能很满意(6)",
                link: "javascript:void(0);"
              }, {
                class:"high",
                title: "质量很好(4)",
                link: "javascript:void(0);"
              }, {
                class:"high",
                title: "能耗合理(4)",
                link: "javascript:void(0);"
              }, {
                class:"high",
                title: "自动化程度高(6)",
                link: "javascript:void(0);"
              }, {
                title: "性能一般(2)",
                link: "javascript:void(0);"
              }, {
                title: "能耗高(6)",
                link: "javascript:void(0);"
              }, {
                title: "售后一般(2)",
                link: "javascript:void(0);"
              }
            ]
          })}}
        </div>

        <div class="list_box">

          {% for item in ReputationData %}
            <div class="child">
              <div class="l">
                <div class="user">
                  <div>
                    <img _src_="{{item.userIcon}}"/>
                    <i>{{item.userName}}</i>
                  </div>
                  <p>购买价格：{{item.purchasePrice}}</p>
                  <p>购买时间：{{item.buyTime | get_time_timestamp | ge_time_format(2)}}</p>
                  <p>投入使用：{{item.useTime | get_time_timestamp | ge_time_format(2)}}</p>
                </div>

                <div class="grade">
                  <span>用户评分</span>
                  <div class="score">
                    <span>{{item.statisticsModel.score}}</span>
                    {{star(item.statisticsModel.score)}}
                  </div>
                  {% if item.statisticsModel.reputationScore != null and item.statisticsModel.reputationScore.length > 0 %}
                    <div class="configuration">
                      {% for reputationScoreItem in item.statisticsModel.reputationScore %}
                        <p data-id="{{reputationScoreItem.reputationTypeId}}">
                          <span>{{reputationScoreItem.reputationTypeName}}：</span>
                          <span>{{reputationScoreItem.reputationScore}}</span>
                        </p>
                      {% endfor %}
                    </div>
                  {% endif %}

                </div>
                {% if item.newsId != null and item.newsId != 0 %}
                  <div class="more">
                    <a href="/news/reputation/{{item.newsId}}" target="_blank">查看口碑详情</a>
                  </div>
                {% endif %}

              </div>

              <div class="r">
                <p>{{item.summary | safe}}</p>
                <div class="atlas">

                  {% for imgurl in (item.summary | onlyimg) %}
                    <img _src_="{{imgurl}}" data-viewer="{{imgurl}}"/>
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

  </div>

{% endblock body %}