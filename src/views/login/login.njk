{% macro login1(args) %}

  <link href="/dist/styles/login/login.css" rel="stylesheet">

  <div id="login_container" style="display:none">
    <div class="login_box">

      <div class="phone_login">
        <div class="login_title">
          <p>手机登录</p>
          <span>欢迎登录乐包网</span>

          <i class="iconfont_wlzj close">&#xE01E;</i>
        </div>

        <div class="login_content" style="padding-top:80px;">
          <div class="phone">
            <input type="text" placeholder="手机号"/>
          </div>
          <div class="verification clearfix" style="margin-bottom:8px;">
            <input type="text" placeholder="验证码"/>
            <a href="javascript:void(0);" data-type="login" class="getverification">获取验证码</a>
            <span class="countdown">60S</span>
          </div>
          <div class="error clearfix">
            <span></span>
          </div>
          <div class="login_login">
            <a href="javascript:void(0);">登录</a>
          </div>
          <div class="login_more clearfix">
            <a href="javascript:void(0);" class="login_pwd">密码登录</a>
            <a href="javascript:void(0);" class="login_register" style="float:right">立即注册</a>
          </div>

        </div>

        <div class="login_footer">
          登录即代表您已同意<a href="/home/agreement" target="_blank">《服务协议和隐私政策》</a>
        </div>
      </div>

      <div class="register" style="display:none">
        <div class="login_title">
          <p>手机注册</p>
          <span>欢迎登录乐包网</span>

          <i class="iconfont_wlzj close">&#xE01E;</i>
        </div>

        <div class="login_content">
          <div class="username">
            <input type="text" placeholder="用户名"/>
          </div>
          <div class="phone">
            <input type="text" placeholder="手机号"/>
          </div>
          <div class="verification clearfix" style="margin-bottom:8px;">
            <input type="text" placeholder="验证码"/>
            <a href="javascript:void(0);" data-type="register" class='getverification'>获取验证码</a>
            <span class="countdown">60S</span>
          </div>
          <div class="pwd">
            <input type="password"  placeholder="密码(6位以上包含数字和字母)"/>
          </div>
          <div class="error clearfix">
            <span>手机号不能为空</span>
          </div>
          <div class="login_login">
            <a href="javascript:void(0);">登录</a>
          </div>
          <div class="login_more clearfix">
            <a href="javascript:void(0);" class="login_phone">手机登录</a>
            <a href="javascript:void(0);" class="login_register" style="float:right">立即注册</a>
          </div>

        </div>

        <div class="login_footer">
          登录即代表您已同意<a href="/home/agreement" target="_blank">《服务协议和隐私政策》</a>
        </div>
      </div>

      <div class="pwd_login" style="display:none">
        <div class="login_title">
          <p>密码登录</p>
          <span>欢迎登录乐包网</span>

          <i class="iconfont_wlzj close">&#xE01E;</i>
        </div>

        <div class="login_content" style="padding-top:80px;">
          <div class="phone">
            <input type="text" placeholder="手机号"/>
          </div>
          <div class="pwd">
            <input type="password" placeholder="密码"/>
          </div>
          <div class="error clearfix">
            <span></span>
          </div>
          <div class="login_login">
            <a href="javascript:void(0);">登录</a>
          </div>
          <div class="login_more clearfix">
            <a href="javascript:void(0);" class='login_phone' style="float:right">已有帐号 登录</a>
          </div>

        </div>

        <div class="login_footer">
          登录即代表您已同意<a href="/home/agreement" target="_blank">《服务协议和隐私政策》</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/dist/scripts/login/login.js" type="text/javascript"></script>
{% endmacro %}