        <div class="signboard">
          <span>{{companyinfo.stockInfo}}</span>
        </div>

        <div class="brief">
          <p class="l">
            <span>企业全称：</span>{{companyinfo.fullName}}</p>
          <p>
            <span>电话：</span>{{companyinfo.contactPhone}}</p>
          <p class="l">
            <span>官网：</span>{{companyinfo.website}}</p>
