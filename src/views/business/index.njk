        <div class="scort">
          <span>{{companyinfo.reputationScore}}</span>
          {{star(companyinfo.reputationScore)}}
        </div>
        <p class="kbs">
          <span>{{companyinfo.totalReputationCount}}条口碑</span>
          <span>{{companyinfo.highReputationCount}}条优质口碑</span>
