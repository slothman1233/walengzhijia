{% extends "../../shared/layout/mdefaultLayou.njk" %}
{% from "../../shared/sharedView/macro/wuc/mheader.njk" import mheader,
smheader %}

{% block title %}
个人中心 - 乐品包装
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}

  <link href="/dist/styles/m/user/systemnotification.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var pageSize = {{pageSize}}
  </script>
  <script type="text/javascript" src="/dist/scripts/m/user/systemnotification.js"></script>
{% endblock script %}

{% block body %}
  <div class="header">
    {{mheader({title:"系统通知"})}}
  </div>

  <div class="systembox">

    <div class="list_box">
      {% if systemData != null and systemData.length >= 0 %}
      {% for item in systemData %}
        <a href="{{item.notificationLink}}">
          <p>【系统通知】{{item.notificationContent}}
            <span>查看详情>></span></p>
          <section>
            {{item.noticeTime | get_time_timestamp | ge_time_format(2)}}</section>
        </a>
      {% endfor %}

    {% endif %}
  </div>

</div>

{% endblock body %}