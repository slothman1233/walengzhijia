{% extends "../../shared/layout/mdefaultLayou.njk" %}
{% from "../../shared/sharedView/macro/wuc/mheader.njk" import mheader,
smheader %}

{% block title %}
个人中心 - 乐品包装
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}

  <link href="/dist/styles/m/user/interactionnotification.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var pageSize = {{pageSize}}
  </script>
  <script type="text/javascript" src="/dist/scripts/m/user/interactionnotification.js"></script>
{% endblock script %}

{% block body %}
  <div class="header">
    {{mheader({title:"互动通知"})}}
  </div>

  <div class="systembox">

    <div class="list_box">

      {% if interactiveData != null and interactiveData.length > 0 %}
        {% for item in interactiveData %}
          <a href="{{item.notificationLink}}">
            <section class="t">
          【{{item.notificationSendUserName}}】<span>评论了你的口碑</span></section>
            <section class="r">{{item.extensionJson.CommentTargetContent}}</section>
            <p>{{item.extensionJson.CommentContent}}</p>
            <section class="time">{{item.noticeTime | get_time_timestamp | ge_time_format(2)}}</section>
          </a>
        {% endfor %}
      {% endif %}

    </div>

  </div>
{% endblock body %}