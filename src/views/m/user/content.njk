{% extends "../../shared/layout/mdefaultLayou.njk" %}
{% from "../../shared/sharedView/macro/wuc/mheader.njk" import mheader,
smheader %}
{% from "../../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}
{% block title %}
个人中心 - 乐品包装
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}

  <link href="/dist/styles/m/user/content.css" rel="stylesheet">
{% endblock style %}

{% block script %}

  <script type="text/javascript" src="/dist/scripts/m/user/content.js"></script>
{% endblock script %}

{% block body %}
  <div class="header">
    {{mheader({title:"我发布的内容"})}}
  </div>

  <div class="kb">

    <div class="kbtab mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
      <div class="mui-scroll">
        {{navigationbar( {
              isMore: false,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
                data:[ {
                title: "口碑",
                link: "javascript:void(0);",
                id: "1",
                blank: true
              }]
            })}}
      </div>
    </div>

    <div class="list_box">
      {% if kbData != null and kbData.length > 0 %}
        {% for item in kbData %}
          <a href="/m/news/reputation/{{item.newsId}}">
            <section class="t">{{item.title}}</section>
            <p>{{item.summary | safe}}</p>
            <section class="time">{{item.createTime | get_time_timestamp | ge_time_format(2)}}</section>
          </a>
        {% endfor %}
      {% endif %}

    </div>
  </div>

{% endblock body %}