{% extends "../shared/layout/mdefaultLayou.njk" %}
{% from "../shared/sharedView/macro/components/star/star.njk" import star %}
{% from "../shared/sharedView/macro/components/list.njk" import list1,
list2 %}
{% from "../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}

{% block title %}
乐品包装 - 联结包装智能工业4.0
{% endblock title %}

{% block keywords %}
包装,乐品包装,包装行业,瓦楞包装,包装印刷,包装新闻,口碑,口碑评分,产品,产品大全,问答,咨询,咨询销售,社区
{% endblock %}

{% block description %}
乐品包装致力于成为最有影响力的工业包装产品信息平台。这里将汇聚最新最全的前沿产品信息，通过海量真实的口碑评论聚合、品牌资讯、产品信息、产品口碑、问答等信息，帮您寻找最合适满意的包装设备产品。
{% endblock %}

{% block style %}

  <link href="/assets/plugin/mui/mui.previewImage.css" rel="stylesheet">
  <link href="/dist/styles/m/index/index.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var listpageSize = {{listpageSize}}
  </script>
  <script src="/assets/plugin/mui/mui.zoom.js" type="text/javascript"></script>
  <script src="/assets/plugin/mui/mui.previewimage.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="/dist/scripts/m/index/index.js"></script>
{% endblock script %}

{% block body %}

  {# 底部tab #}
  <nav class="mui-bar mui-bar-tab footer">
    <a class="mui-tab-item mui-active home" href="#index">
      <i></i>
      <span class="mui-tab-label">首页</span>
    </a>
    <a class="mui-tab-item pinpai" href="#list">
      <i></i>
      <span class="mui-tab-label">品牌商</span>
    </a>
    <a class="mui-tab-item usercenter wode" href="#usercenter">
      <i></i>
      <span class="mui-tab-label">我的</span>
    </a>

  </nav>

  <div class="mui-content">
    <div id="index" class="mui-control-content mui-active">
      <section class="hreader">
        <img alt="" _src_="/assets/images/h5/logo.png">

        {% if cookieuserinfo.userIcon %}
          <img _src_="{{cookieuserinfo.userIcon}}" class="hreadlogo"/>
        {% else %}
          <a href="/m/login">登录</a>
        {% endif %}

        <div class="input">
          <i class="iconfont_wlzj">&#xE010;</i>
          <input type='text' readonly="readOnly" value="搜索" placeholder="搜索"/>
        </div>
      </section>

      {# <section class="search">
        <i class="iconfont_wlzj">&#xE010;</i>
        <input type="text" placeholder="输入你要搜索的内容"/>
      </section> #}

      <section class="group clearfix">
        <div class="child synthesize">
          <img alt="" _src_="/assets/images/h5/home_all.png">
          <span>品牌大全</span>
        </div>
        <div class="child reputation">
          <img alt="" _src_="/assets/images/h5/home_one.png">
          <span>口碑排行</span>
        </div>
        <div class="child hot">
          <img alt="" _src_="/assets/images/h5/home_hot.png">
          <span>热门排行</span>
        </div>
        <a class="child" href="/m/home/advcooperation">
          <img alt="" _src_="/assets/images/h5/home_ad.png">
          <span>合作通道</span>
        </a>

      </section>

      <section class="swiper-container clearfix">
        <div class="swiper-wrapper">
          {% if (ad.adslideData != null) and (ad.adslideData.length > 0) %}
            {% for item in ad.adslideData %}
              <a class="swiper-slide" href="{{item.mobileAdLink}}" title="{{item.desc}}">
                <p>{{item.desc}}</p>
                <img _src_="{{item.icon}}"/>
              </a>
            {% endfor %}
          {% endif %}

        </div>

        <div class="swiper-pagination"></div>
      </section>

      <section class="rowImg clearfix">

        {% if (ad.adtoptowData != null) and (ad.adtoptowData.length > 0) %}
          {% for item in ad.adtoptowData %}
            <a class="child" href="{{item.mobileAdLink}}" title="{{item.desc}}" data-id="{{item.adId}}">
              <img _src_="{{item.icon}}"/>
              <span>{{item.desc}}</span>
            </a>
          {% endfor %}
          {# <a class="child tab_list_2" title="更多品牌" data-id="0">
            <img _src_=""/>
            <span>更多品牌</span>
          </a> #}
        {% endif %}

      </section>

      <section class="kbhot">
        <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
          <div class="mui-scroll">
            {% if (hotData != null) and (hotData.length > 0) %}
              {% for item in hotData %}
                <a class="child" href="/m/business/{{item.companyId}}">
                  <section class="title clearfix">
                    <img src="{{item.logo}}"/>
                    <span>{{item.abbrName}}</span>
                  </section>
                  <section class="kb clearfix">
                    <b>{{item.reputation.score | ternary(item.reputation.score,0)}}</b>
                    {{star(item.reputation.score| ternary(item.reputation.score,0))}}
                  </section>
                  <p class="clearfix">

                    {# <span>{{item.reputation.highReputationCount | ternary(item.reputation.highReputationCount,0)}}条优质口碑</span> #}
                    <i>共{{item.reputation.reputationCount | ternary(item.reputation.reputationCount,0)}}条口碑</i>
                  </p>
                </a>
              {% endfor %}
            {% endif %}
          </div>
        </div>
      </section>

      <section class="news">
        <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
          <div class="mui-scroll">
            {{navigationbar( {
              isMore: true,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
              data:newTypes
            })}}
          </div>
        </div>
        <section class="listbox">
          {{list1(firstNewsList)}}

        </section>

      </section>

    </div>
    <div id="list" class="mui-control-content">
      <section class="hreader">
        <img alt="" _src_="/assets/images/h5/logo.png">
        {# <a>
          <i class="iconfont_wlzj">&#xE010;</i>
        </a> #}
        <div class="title">
          品牌商
        </div>

      </section>

      <section class="category">

        {{navigationbar( {
              isMore: false,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
              data:productTabList
            })}}

        <div class="sCategories">
          <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
            <div class="mui-scroll">
              {% for item in productTypeData %}
                <span class="{{ (loop.index == 1) | ternary('select','') }}" data-id="{{item.productTypeId}}">
                  {{item.productType}}
                </span>
              {% endfor %}
            </div>
          </div>
        </div>

      </section>

      <div class="list_box">
        {{list2(companylistJson)}}
      </div>

    </div>

    <div id="usercenter" class="mui-control-content">
      <section class="hreader">
        <i class="iconfont_wlzj tohome">&#xE03F;</i>
        <a href="/m/search/1">
          <i class="iconfont_wlzj">&#xE010;</i>
        </a>
        <div class="title">
          我的
        </div>

      </section>
      <section class="userinfo clearfix">
        <a href="/m/user/information" class="userinfo_box">
          <img _src_="{{cookieuserinfo.userIcon}}"/>
          <i class="iconfont_wlzj">&#xE044;</i>
          <p>{{cookieuserinfo.name}}</p>

        </a>
      </section>
      <section class="systeminfo">
        <a href="/m/user/systemnotification">
          <i class="iconfont_wlzj l">&#xE03E;</i>
          <i class="iconfont_wlzj r">&#xE044;</i>
          <p>系统通知</p>
        </a>
        <a href="/m/user/interactionnotification">
          <i class="iconfont_wlzj l">&#xE040;</i>
          <i class="iconfont_wlzj r">&#xE044;</i>
          <p>互动通知</p>
        </a>
        <a href="/m/user/content">
          <i class="iconfont_wlzj l">&#xE03A;</i>
          <i class="iconfont_wlzj r">&#xE044;</i>
          <p>我发布的内容</p>
        </a>
        {# <a>
          <i class="iconfont_wlzj l">&#xE03B;</i>
          <i class="iconfont_wlzj r">&#xE044;</i>
          <p>意见反馈</p>
        </a>
        #}
        <a href="/m/user/setting">
          <i class="iconfont_wlzj l">&#xE049;</i>
          <i class="iconfont_wlzj r">&#xE044;</i>
          <p>设置</p>
        </a>
      </section>
    </div>

  </div>

{% endblock body %}