{% extends "../shared/layout/mdefaultLayou.njk" %}
{% from "../shared/sharedView/macro/components/star/star.njk" import star %}
{% from "../shared/sharedView/macro/components/list.njk" import list1,
list2 %}
{% from "../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}

{% block title %}
54123123213333
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}

  <link href="/assets/plugin/mui/mui.previewImage.css" rel="stylesheet">
  <link href="/dist/styles/m/index/index.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var listpageSize = {{listpageSize}}
  </script>
  <script src="/assets/plugin/mui/mui.zoom.js" type="text/javascript"></script>
  <script src="/assets/plugin/mui/mui.previewimage.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="/dist/scripts/m/index/index.js"></script>
{% endblock script %}

{% block body %}

  {# 底部tab #}
  <nav class="mui-bar mui-bar-tab footer">
    <a class="mui-tab-item mui-active" href="#index">
      <span class="mui-tab-label">首页</span>
    </a>
    <a class="mui-tab-item" href="#list">

      <span class="mui-tab-label">品牌商</span>
    </a>
    <a class="mui-tab-item" href="#tabbar-with-contact">

      <span class="mui-tab-label">首页</span>
    </a>

  </nav>

  <div class="mui-content">
    <div id="index" class="mui-control-content mui-active">
      <section class="logo">
        <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
      </section>

      <section class="search">
        <i class="iconfont_wlzj">&#xE010;</i>
        <input type="text" placeholder="输入你要搜索的内容"/>
      </section>

      <section class="group clearfix">
        <div class="child synthesize">
          <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
          <span>品牌大全</span>
        </div>
        <div class="child reputation">
          <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
          <span>口碑排行</span>
        </div>
        <div class="child hot">
          <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
          <span>热门排行</span>
        </div>
        <div class="child">
          <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
          <span>销售询价</span>
        </div>

      </section>

      <section class="swiper-container clearfix">
        <div class="swiper-wrapper">
          {% if (ad.adslideData != null) and (ad.adslideData.length > 0) %}
            {% for item in ad.adslideData %}
              <a class="swiper-slide" href="{{item.adLink}}" title="{{item.desc}}" target="_blank">
                <p>{{item.desc}}</p>
                <img _src_="{{item.icon}}"/>
              </a>
            {% endfor %}
          {% endif %}

        </div>

        <div class="swiper-pagination"></div>
      </section>

      <section class="rowImg clearfix">

        {% if (ad.adtoptowData != null) and (ad.adtoptowData.length > 0) %}
          {% for item in ad.adtoptowData %}
            <a class="child" href="{{item.adLink}}" title="{{item.desc}}" data-id="{{item.adId}}">
              <img _src_="{{item.icon}}"/>
              <span>{{item.desc}}</span>
            </a>
          {% endfor %}
          <a class="child tab_list_2" title="更多品牌" data-id="0">
            <img _src_=""/>
            <span>更多品牌</span>
          </a>
        {% endif %}

      </section>

      <section class="kbhot">
        <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
          <div class="mui-scroll">
            {% if (hotData != null) and (hotData.length > 0) %}
              {% for item in hotData %}
                <a class="child" href="/business/{{item.companyId}}" target="_blank">
                  <section class="title clearfix">
                    <img src="{{item.logo}}"/>
                    <span>{{item.abbrName}}</span>
                  </section>
                  <section class="kb clearfix">
                    <b>{{item.reputation.score}}</b>
                    {{star(item.reputation.score)}}
                  </section>
                  <p class="clearfix">
                    <span>{{item.reputation.highReputationCount | ternary(item.reputation.highReputationCount,0)}}条优质口碑</span>
                    <i>{{item.reputation.reputationCount | ternary(item.reputation.reputationCount,0)}}条口碑</i>
                  </p>
                </a>
              {% endfor %}
            {% endif %}
          </div>
        </div>
      </section>

      <section class="news">
        <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
          <div class="mui-scroll">
            {{navigationbar( {
              isMore: true,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
              data:newTypes
            })}}
          </div>
        </div>
        <section class="listbox">
          {{list1(firstNewsList)}}

        </section>

      </section>

    </div>
    <div id="list" class="mui-control-content">
      <section class="logo">
        <i class="iconfont_wlzj">&#xE010;</i>
        <img alt="" _src_="https://cn.bing.com/th?id=OHR.CarrizoPlain_ZH-CN5933535493_UHD.jpg&amp;pid=hp&amp;w=3840&amp;h=2160&amp;rs=1&amp;c=4&amp;r=0">
      </section>

      <section class="category">

        {{navigationbar( {
              isMore: false,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
              data:productTabList
            })}}

        <div class="sCategories">
          <div class="mui-scroll-wrapper mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
            <div class="mui-scroll">
              {% for item in productTypeData %}
                <span class="{{ (loop.index == 1) | ternary('select','') }}" data-id="{{item.productTypeId}}">
                  {{item.productType}}
                </span>
              {% endfor %}
            </div>
          </div>
        </div>
      </section>

      <div class="list_box">
        {{list2(companylistJson)}}
      </div>

    </div>
    <div id="tabbar-with-contact" class="mui-control-content">
        3
    </div>

  </div>

{% endblock body %}