{% extends "../../shared/layout/mdefaultLayou.njk" %}
{% from "../../shared/sharedView/macro/wuc/mheader.njk" import mheader,
smheader %}
{% from "../../shared/sharedView/macro/components/list.njk" import list1,
list2 %}
{% from "../../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}

{% block title %}
  {{keyword}} - 搜索 - 乐品包装
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}
  <link href="/dist/styles/m/search/index.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var type = {{type}}
    var keyword = '{{keyword }}'
    var newsTimeTicks = {{newsTimeTicks}}
    var companyTimeTicks = {{companyTimeTicks}}
  </script>
  <script type="text/javascript" src="/dist/scripts/m/search/index.js"></script>
{% endblock script %}

{% block body %}
  <div class="header">
    {{mheader({title:"搜索"})}}
  </div>

  <div class="search">
    <div class="hd">
      <form action="javascript:search();" class="searchheader clearfix">
        <i class="iconfont_wlzj magnifying">&#xE010;</i>
        <i class="iconfont_wlzj close">&#xE039;</i>
        <div>
          <input type="search" class='sr' placeholder="搜索" value="{{keyword}}"/>
        </div>
      </form>
      <div class="cancel">
       取消
    </div>
    </div>

    <div class="searchresult" style="display:none">

      <div class="container">
        {{navigationbar({
              isMore: false,
              MoreText: "更多>>",
              link: "#",
              isSelect: "1",
              data:[{
                    title: "综合",
                    link: "javascript:void(0);",
                    id: "1",
                    blank: true
                  },{
                    title: "品牌商",
                    link: "javascript:void(0);",
                    id: "2",
                    blank: true
                  }]
            })}}

        <div class="container_box">
          <div class="synthesize">

            {% if bsuinessAry.length <= 0 and newsAry.length <= 0 %}
              <div class="nocontent">
                <img _src_="/assets/images/empty.png"/>
              </div>

            {% else %}
              {{list2(bsuinessAry)}}
              {{list1(newsAry)}}
            {% endif %}

          </div>
          <div class="business" style="display:none">
            {% if bsuinessAry.length <= 0%}
              <div class="nocontent">
                <img _src_="/assets/images/empty.png"/>
              </div>
            {% else %}
              {{list2(bsuinessAry)}}
            {% endif %}

          </div>
        </div>

      </div>

    </div>

    <div class="searchfilter"  style="display:none">

      <div class="container">
        <h2>搜索历史</h2>
      </div>
    </div>
  </div>

{% endblock body %}