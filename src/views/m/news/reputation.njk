{% extends "../../shared/layout/mdefaultLayou.njk" %}
{% from "../../shared/sharedView/macro/components/satemap/satemap1.njk" import satemap1 %}
{% from "../../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}
{% from "../../shared/sharedView/macro/components/comment/comment1.njk" import comment %}
{% from "../../shared/sharedView/macro/components/star/star.njk" import star %}
{% from "../../shared/sharedView/macro/wuc/mheader.njk" import mheader,
smheader %}
{% block title %}
54123123213333
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}
  <link href="/dist/styles/m/news/reputation.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
    var reshighKbChart = {{reshighKbChart | safe}}
    var reputationId = {{newsDetail.newsDetail.reputationId}}
    var newsId = {{newsId}}
  </script>
  <script type="text/javascript" src="/assets/plugin/echarts/echarts.min.js"></script>
  <script type="text/javascript" src="/dist/scripts/m/news/reputation.js"></script>
{% endblock script %}

{% block body %}
  <div class="header">
    {{mheader({title:'文章详情'})}}
  </div>

  <div class="news_box">
    <h1 class="news_title">{{newsDetail.newsDetail.newsTitle}}</h1>
    <div class="user_box clearfix">
      <img _src_="{{newsDetail.newsDetail.userIcon}}"/>
      <section>
        <p>{{newsDetail.newsDetail.userName}}</p>
        <span>发布于：{{newsDetail.newsDetail.newsTime | get_time_timestamp | ge_time_format(2)}}</span>
      </section>
    </div>

    <div class="reputation clearfix">
      <div class="pr clearfix">
        <p>
          <span>购买价格</span>
          <i>{{newsDetail.newsDetail.purchasePrice | getPurchasePrice(newsDetail.newsDetail.priceShowStatus)}}万</i>
        </p>
        <p>
          <span>购买时间</span>
          <i>{{newsDetail.newsDetail.buyTime | get_time_timestamp | ge_time_format(2)}}</i>
        </p>
        <p>
          <span>投入使用</span>
          <i>{{newsDetail.newsDetail.useTime | get_time_timestamp | ge_time_format(2)}}</i>
        </p>
      </div>
      <div class="companyinfo clearfix">
        <div class="l">
          <p>品牌：{{newsDetail.product.companyName}}</p>
          <p class="product">产品：{{newsDetail.product.productName}}</p>

          <div class="grade">
            <h4>用户评分</h4>
            <div class="score">
              <p>{{newsDetail.newsDetail.statisticsModel.score}}</p>
              {{star(newsDetail.newsDetail.statisticsModel.score)}}
            </div>
          </div>

        </div>

        <div class="r">
          <div class="ecahr">
            <p>{{reshighKbScore}}</p>
            <div id="ecahr0"></div>
          </div>
        </div>

      </div>
    </div>

    <div class="content clearfix">
      {{newsDetail.newsDetail.newsContent | safe}}
    </div>

  </div>

  <div class="relatedproducts clearfix">
    <h2>相关产品</h2>
    <div class="box">
      <div class="content clearfix">
        <img _src_="{{newsDetail.product.producerCover}}"/>
        <div class="info">
          <p>
            <img _src_="{{newsDetail.product.companyIcon}}"/>
            <span>{{newsDetail.product.companyName}}</span>
          </p>
          <p>{{newsDetail.product.productName}}</p>
        </div>
      </div>

      <div class="btn">
        <a class="business" href="/m/business/product/{{newsDetail.product.companyId}}/{{newsDetail.product.productId}}" target="_blank">查看详情</a>
        <a class="enquiry" href="/m/enquiry/{{newsDetail.product.companyId}}/0" target="_blank">立即咨询</a>
      </div>
    </div>
  </div>

  <div class="questions">
    <h2>发表评论</h2>
    <div class="questions_box"></div>
  </div>
{% endblock body %}