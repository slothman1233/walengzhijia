{% extends "../shared/layout/defaultLayout.njk" %}
{% from "../shared/sharedView/macro/components/satemap/satemap1.njk" import satemap1 %}
{% from "../shared/sharedView/macro/components/navigationbar.njk" import navigationbar %}
{% from "../shared/sharedView/macro/components/comment/comment1.njk" import comment %}
{% from "../shared/sharedView/macro/components/star/star.njk" import star %}
{% block title %}
54123123213333
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}
  <link href="/dist/styles/news/index.css" rel="stylesheet">
{% endblock style %}

{% block script %}
   <script type="text/javascript">
     var newsId = {{newsId}}
   </script>
  <script type="text/javascript" src="/dist/scripts/news/index.js"></script>
{% endblock script %}

{% block body %}
  <div id="main">
    <div class="map">
      {{satemap1({
        title: "当前位置：",
        select: 2,
        map: [
          {
            name: "首页",
            link: "/"

          }, {
            name: "正文",
            link: "/news/" + newsId
          }
        ]
      })}}
    </div>

    <div class="container clearfix">
      <div class="l">
        <div class="news_content">
          <h1>{{newsDetail.newsDetail.newsTitle}}</h1>
          <div class="title clearfix">
            <img _src_="{{newsDetail.newsDetail.userIcon}}"/>
            <span>{{newsDetail.newsDetail.createUser}}</span>
            <span>发布于：{{newsDetail.newsDetail.newsTime | get_time_timestamp | ge_time_format(2)}}</span>

            <div class="praise">
              <i class="iconfont_wlzj">&#xE018;</i>
              <span>{{newsDetail.newsDetail.praiseCount}}</span>
            </div>
          </div>

          <div class="content clearfix">
            {{newsDetail.newsDetail.newsContent | safe}}
          </div>

          <div class="share clearfix">
            <em class="share_text">分享</em>
            <i class="weixin" title="微信" data-bshare="{type:'weixin',url:'11',pop:true,title:'代理承诺的返佣少给20万，FX110介入，立马达成补偿协议！',summary:'少发20万返佣沟通1个多月无果，FX110介入，立马达成补偿协议！',images:''}"></i>
            <i class="weibo" title="微博" data-bshare="{type:'weibo',url:'22',title:'代理承诺的返佣少给20万，FX110介入，立马达成补偿协议！',summary:'少发20万返佣沟通1个多月无果，FX110介入，立马达成补偿协议！（分享至@FX110）',images:''}"></i>
            <i class="qzone" title="QQ空间" data-bshare="{type:'qzone',url:'33',title:'代理承诺的返佣少给20万，FX110介入，立马达成补偿协议！',summary:'少发20万返佣沟通1个多月无果，FX110介入，立马达成补偿协议！',images:''}"></i>

            <div class=" givelike">
              <i class="iconfont_wlzj">&#xE017;</i>
              <span>{{newsDetail.newsDetail.praiseCount}}</span>
            </div>
          </div>
        </div>

        <div class="questions">
          <div class="tab">
            {{navigationbar({
                isMore: false,
                isSelect: "1",
                data: [
                  {
                    title: "回答",
                    link: "javascript:(0)"
                  }
                ]
            })}}
          </div>

          <div class="questions_box">
            {# {{comment()}} #}
          </div>
        </div>

      </div>

      <div class="r">
      

        <div class="list1 relatedproducts">
          <p>相关产品</p>
          <div class="box">
            <img _src_="{{newsDetail.product.producerCover}}"/>
            <div class="content">
              <div class="left">
                <p>
                  <img _src_="{{newsDetail.product.companyIcon}}"/>
                  <span>{{newsDetail.product.companyName}}</span>
                </p>
                <p>{{newsDetail.product.productName}}</p>
              </div>
              <a class="btn" href="/business/product/{{newsDetail.product.companyId}}/{{newsDetail.product.productId}}" target="_blank">查看详情</a>
            </div>
          </div>

        </div>


          <div class="list1 hotnews">
          <p>热门新闻</p>
          <div class="list">
            {% for item in newsDetail.hotNews %}
              <div class="child clearfix">
                <i>●</i>
                <a href="{{item.newsId}}" title="{{item.newsTitle}}" target="_blank">
                  {{item.newsTitle}}
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
        
      </div>
    </div>
  </div>

{% endblock body %}