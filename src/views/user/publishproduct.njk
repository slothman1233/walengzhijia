{% block body %}
  <div id="usermain">
    <div class="titlect">
      {{usertitle({
          link: '/user/product',
          icon: "&#xE01D;",
          title: "发布产品"
        })}}
    </div>

    <div class="box">
      <div class="basicinfo">
        <div class="title">
        填写产品基本信息
        </div>

        <div class="container">
          <div class="row clearfix">
            <p>产品分类<span>*</span></p>
            <div class="s1" id="s1">{{selectOption()}}</div>
          </div>
          <div class="labels">
            <div class="row clearfix">
              <p>细节标签<span>*</span></p>
              <div class="Detailslabel">
                <span>标签<i class="iconfont_wlzj">&#xE01E;</i>
                </span>
                <span>标签<i class="iconfont_wlzj">&#xE01E;</i>
                </span>
                <span>标签<i class="iconfont_wlzj">&#xE01E;</i>
                </span>
              </div>

            </div>
            <p class="clearfix">请选择产品的二级分类标签，如没有对应的标签，可选择“其它”或“添加标签”</p>
            <div class="list clearfix">
              {% set list_data = [
                {
                  name: "发的所发生的阿斯蒂芬",
                  id: "123123"
                }, {
                  name: "发的所发生的阿斯蒂芬",
                  id: "123123"
                }, {
                  name: "发的所发生的阿斯蒂芬",
                  id: "123123"
                }, {
