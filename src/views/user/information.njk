{% extends "../shared/layout/simpleLayout.njk" %}

{% from "../shared/sharedView/macro/components/navigationbar.njk" import usernavigationbar %}
{% from "../shared/sharedView/macro/components/title.njk" import usertitle %}
{% from "../shared/sharedView/macro/components/choicebox/index.njk" import choicebox %}
{% from "../shared/sharedView/macro/components/selectOption.njk" import selectOption %}
{% block title %}
个人中心 - 乐品包装
{% endblock title %}

{% block keywords %}{% endblock %}

{% block description %}{% endblock %}

{% block style %}
  <link href="/dist/styles/user/information.css" rel="stylesheet">
{% endblock style %}

{% block script %}
  <script type="text/javascript">
  </script>
  <script src="/assets/plugin/ali-oss-6.9.0/dist/aliyun-oss-sdk.js"></script>
  <script type="text/javascript" src="/dist/scripts/user/information.js"></script>
{% endblock script %}

{% block body %}

  <div id="usermain">
    <div class="box">
      <div class="box_title">
        {{usernavigationbar({
            isMore: false,
            MoreText: "#",
            link: "#",
            isSelect: 1,
            data: [
               {
                title: "个人信息",
                link: "javascript:void(0);"
              }
            ]

          })}}
      </div>

      <div class="information_content clearfix">
        <div class="l">
          <p>个人资料</p>
          <p style='margin-top: 264px;'>帐号设置</p>
        </div>
        <div class="r" data-uuid="{{cookieuserinfo.uuid}}">
          <div class="child clearfix">
            <p>用户名：</p>
            <div class="textarea" contenteditable="false">{{cookieuserinfo.name}}</div>
            <a href="javascript:void(0)" class="applyfor username">编辑</a>
            <a href="javascript:void(0)" class="submit username">确认</a>
          </div>
          <div class="child clearfix">
            <p>头像：</p>
            <div class="padding"><img _src_="{{cookieuserinfo.userIcon}}"></div>
            <a href="javascript:void(0)">
            更换头像
            <input type="file" class="uploadfileinput" multiple="multiple" accept="image/*">
            </a>
          </div>
          <div class="child clearfix">
            <p>性别：</p>
            <div class="textarea" contenteditable="false">{{cookieuserinfo.sex | user_sex }}</div>

            <div class="inputradio" style="display:none">
              {{choicebox({
              figuratetype: '1',
              type: 'radio',
              defaultselect: '0',
              name: 'radio',
              data: [
                {
                  id: 1,
                  value: '男'
                }, {
                  id: 2,
                  value: '女'
                }
              ]
            })}}
            </div>

            <a href="javascript:void(0)" class="applyfor sex">编辑</a>
            <a href="javascript:void(0)" class="submit sex">确认</a>
          </div>
          <div class="child clearfix">
            <p>所在行业：</p>
            <div class="textarea" contenteditable="false">{{cookieuserinfo.industry}}</div>
            <a href="javascript:void(0)" class="applyfor industry">编辑</a>
            <a href="javascript:void(0)" class="submit industry">确认</a>
          </div>
          <div class="child clearfix">
            <p>所在地区：</p>
            <div class="textarea" contenteditable="false">{{cookieuserinfo.areaCodeValue}}</div>

            <div class="selectOption_box" style='display:none'>
              <div class="selectOption_area"></div>

              <div class="selectOption_city"></div>
            </div>
            <a href="javascript:void(0)" class="applyfor area">编辑</a>
            <a href="javascript:void(0)" class="submit area">确认</a>
          </div>
          <div class="child clearfix">
            <p>绑定手机：</p>
            <div class="textarea" contenteditable="false">{{cookieuserinfo.phoneNumber | user_iphone}}</div>
            {# <a href="javascript:void(0)" class="applyfor iphone">编辑</a>
            <a href="javascript:void(0)" class="submit iphone">确认</a> #}
          </div>
          {# <div class="child clearfix">
            <p>所在地区：</p>
            <div class="textarea" contenteditable="false">湖南 长沙</div>
            <a href="javascript:void(0)" class="applyfor">编辑</a>
            <a href="javascript:void(0)" class="submit">确认</a>
          </div> #}
        </div>
      </div>
    </div>
    {% if type == 1 %}
      <div class="information_submit">
        <a href="javascript:void(0)">保存</a>
      </div>
    {% endif %}

  </div>
{% endblock body %}